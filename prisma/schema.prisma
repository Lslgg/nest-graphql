datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  // previewFeatures = []
}

generator dbml {
  provider = "prisma-dbml-generator"
}

model User {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  isDel Boolean @default(true)
  isValid Boolean @default(true)
  email     String   @unique
  password  String
  firstname String?
  lastname  String?
  role      Role
}

model Site {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  isDel Boolean @default(true)
  isValid Boolean @default(true)
  domain    String      @unique
  name      String
  pid       String
  Corporate Corporate[]
}

model Corporate {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  isDel Boolean @default(true)
  isValid Boolean @default(true)
  site      Site     @relation(fields: [siteId], references: [id])
  siteId    String
  nameZH    String
  nameEN    String
  abbr      String
  brandName String
}

model Contact {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  isDel Boolean @default(true)
  isValid Boolean @default(true)
  type      String
  content   String
}

enum Role {
  ADMIN
  USER
}
